{{!-- the data gets on the page but it could look better --}}

<div class="row row-cols-1 row-cols-md-2 g-4 pt-3 pb-3">

<h1 class="mt-4">Hello, {{user}}! Welcome to your portfolio!</h1>

{{#if stocks}}


{{#each stocks as |stock|}}
<table class="my-table" style="width:100%" >
    {{!-- <thead class="thead-dark"> --}}
    <tr>
        <td class="thead-dark">Name</td>
        <td class="thead-dark">{{stock.dataValues.name}}</td>
    </tr>
     <tr>
        <td>Symbol</td>
        <td>{{stock.dataValues.symbol}}</td>
    </tr>
     <tr>
        <td>Close Price</td>
        <td>${{stock.dataValues.close_price}}</td>
     </tr>
      <tr>
        <td>Shares Owned</td>
        <td>{{stock.dataValues.shares_owned}}</td>
     </tr>
</table>
{{/each}}
<h1>Total portfolio value: ${{totalValue}} </h1>

</div>
{{/if}}
{{#unless stocks}}
<h2>Add stocks to your portfolio to see them here.</h2>
{{/unless}}

